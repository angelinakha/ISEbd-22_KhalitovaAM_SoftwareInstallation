@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
    <h2 class="display-4">Создание заказа</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Пакет:</div>
        <div class="col-8">
            <select id="package" name="package" class="form-control" aspitems="@(new SelectList(@ViewBag.Packages,"Id", "PackageName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Количество:</div>
        <div class="col-8"><input type="text" name="count" id="count" /></div>
    </div>
    <div class="row">
        <div class="col-4">Сумма:</div>
        <div class="col-8">
            <input type="text" id="sum" name="sum" readonly="true" />
        </div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Создать" class="btn btnprimary" /></div>
    </div>
</form>
<script>
    $('#package').on('change', function () {
        check();
    });
    $('#count').on('change', function () {
        check();
    });
    function check() {
        var count = $('#count').val();
        var package = $('#package').val();
        if (count && package) {
            $.ajax({
                method: "POST",
                url: "/Home/Calc",
                data: { count: count, package: package },
                success: function (result) {
                    $("#sum").val(result);
                }
            });
        };
    }
</script>
